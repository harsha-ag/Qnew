<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="5dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cv_postlayout_proimage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/cat"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_postlayout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asker Name"
                android:layout_marginHorizontal="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_postlayout_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="Question Text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_postlayout_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="Answer Text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5.2"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ibt_postlayout_upvote"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/social_upvote_black"
                android:layout_weight="1.2" />

            <TextView
                android:id="@+id/tv_postlayout_likecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:layout_weight="0.8" />

            <ImageButton
                android:id="@+id/ibt_postlayout_dislike"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/social_downvote_black"
                android:layout_weight="1.2" />

            <TextView
                android:id="@+id/tv_postlayout_dislikecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="0.8" />

            <ImageButton
                android:id="@+id/ibt_postlayout_share"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:src="@drawable/social_comment"
                android:layout_weight="1.2" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

