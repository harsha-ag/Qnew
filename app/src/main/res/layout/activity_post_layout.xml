<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    android:padding="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_postlayout_proimage"
            android:layout_width="72dp"

            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_postlayout_name"
            android:layout_width="177dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:text="XXXXXX XXXXXX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.628"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_postlayout_question"
            android:layout_width="345dp"
            android:layout_height="52dp"
            android:layout_marginBottom="264dp"
            android:text="shcjlshcjsdbljdjjdaj.jjjjnjjmncjnjcjncjnjnjknjknckjnjknjnknckjnskjnckscnkjnknjknskjnjnjnknjnknkjnjnknknjknsncsnckscjskcnskckskncsdknjjsscscdssdcddcdscdscscsdddssds"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_postlayout_answer"
            android:layout_width="346dp"
            android:layout_height="134dp"
            android:layout_marginTop="24dp"
            android:text="shcjlshcjsdbljdjjdaj.jjjjnjjmncjnjcjncjnjnjknjknckjnjknjnknckjnskjnckscnkjnknjknskjnjnjnknjnknkjnjnknknjknsncsnckscjskcnskckskncsdknjjsscscdssdcddcdscdscscsdddssds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_postlayout_question"
            app:layout_constraintVertical_bias="0.085" />

        <ImageButton
            android:id="@+id/ibt_postlayout_like"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="56dp"
            android:layout_height="47dp"
            android:src="@drawable/thumbsup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ibt_postlayout_dislike"
            app:layout_constraintTop_toBottomOf="@+id/tv_postlayout_answer"
            app:layout_constraintVertical_bias="0.4" />

        <ImageButton
            android:id="@+id/ibt_postlayout_dislike"
            android:layout_width="47dp"
            android:layout_height="46dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="264dp"
            android:src="@drawable/thumb_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_postlayout_answer" />

        <ImageButton
            android:id="@+id/ibt_postlayout_share"
            android:layout_width="50dp"

            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="212dp"
            android:src="@drawable/send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_postlayout_answer" />

        <TextView
            android:id="@+id/tv_postlayout_likecount"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:text="22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibt_postlayout_like" />

        <TextView
            android:id="@+id/tv_postlayout_dislikecount"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/tv_postlayout_likecount"
            app:layout_constraintTop_toBottomOf="@+id/ibt_postlayout_dislike" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

